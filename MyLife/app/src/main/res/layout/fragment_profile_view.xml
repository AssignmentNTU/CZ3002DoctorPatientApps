<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ntu.com.mylife.view.ProfileView"
    android:background="#FFF"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:textColor="#009688"
            android:textSize="30dp"
            android:id="@+id/today_fragment_day_main_page"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:textSize="100dp"
            android:textColor="#009688"
            android:id="@+id/today_fragment_number_day_main_page"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="September"
            android:textColor="#009688"
            android:textSize="30dp"
            android:id="@+id/today_fragment_month_main_page"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</FrameLayout>
