<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ntu.com.mylife.view.ContactOptionsView"
    android:background="#FFF"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name: Edward Sujono"
            android:textSize="20dp"
            android:textColor="#009688"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/username_contact_options" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit Medical Report"
            android:textColor="#009688"
            android:backgroundTint="#009688"
            android:layout_gravity="center_horizontal"
            android:id="@+id/submit_medical_report_button"
            android:layout_marginTop="50dp"
            android:editable="false"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create Reminder"
            android:textColor="#009688"
            android:backgroundTint="#009688"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/create_reminder_button"
            android:editable="false"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Start Chat"
            android:textColor="#009688"
            android:backgroundTint="#009688"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/start_chat_button"
            android:editable="false"
            />


    </LinearLayout>
</FrameLayout>
